@page "/"

<PageTitle>Home</PageTitle>

<header>
    
</header>

<body class="bg-dark d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 56px); padding-top: 56px; box-shadow: 10px 0 50px rgba(0, 0, 0, 0.8)">
    <div class="container rounded p-4">
        <div class="col-md-6 offset-md-3">
            <form>
                <div class="mt-3">
                    <label for="InputEmail" class="form-label text-white" style="font-size:large">Endereço de email</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                    <div id="emailHelp" class="form-text text-white">• Não compartilharemos sua senha com ninguém.</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label text-white" style="font-size:large">Senha</label>
                    <input type="password" class="form-control" id="exampleInputPassword1">
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input " id="exampleCheck1">
                    <label class="form-check-label text-white" for="exampleCheck1">Lembrar Senha</label>
                </div>
                <div class="d-flex justify-content-between">
                    <button type="submit" class="btn btn-dark">Fazer login</button>
                    <button class="btn btn-dark">Registrar-se</button>
                </div>
            </form>
        </div>
    </div>

    <div class="container align-left">
        <h2 class="text-white animate-text">O chat do momento!</h2>
    </div>
</body>
